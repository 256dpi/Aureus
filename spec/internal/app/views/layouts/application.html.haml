!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }/
    %title Aureus
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    = aureus_toolbar 'Aureus' do |t|
      - t.left do |l|
        - l.link_to Rails.env, root_url
        - l.dropdown 'Dropdown' do |d|
          - d.link_to 'Element', '#'
          - d.link_to 'Element', '#'
        - l.info 'Info'
      - t.right do |r|
        - r.info 'Info'
        - r.dropdown 'Dropdown' do |d|
          - d.link_to 'Element', '#'
          - d.link_to 'Element', '#'
        - r.link_to 'Element', '#'
    = aureus_navigation do |n|
      - n.title 'Navigation Title'
      - n.button link_to 'Button', '#'
    = aureus_messages flash
    = aureus_content yield
