= aureus_row do
  = aureus_box @_aureus[:box_title] do
    = aureus_datatable @_aureus[:resources] do |t|
      - t.head do |h|
        - @_aureus[:table_cells].each do |cell|
          - h.text cell[0]
      - t.row do |r, resource|
        - @_aureus[:table_cells].each do |cell|
          - r.cell cell[1].call(resource)
        - @_aureus[:row_actions].each do |action|
          - r.button *action.call(resource)
