- content_for :navigation do
  = aureus_navigation do |n|
    - n.title t(".title")
    - n.button link_to t(".button_cancel"), {{{PATH_PLURAL}}}_url if can? :show, @{{{NAME_SINGULAR}}}
    - n.submit_form_button @{{{NAME_SINGULAR}}}, t(".button_save") if can? :update, @{{{NAME_SINGULAR}}}

= render "form"