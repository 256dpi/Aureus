!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }/
    %title= t('.title')
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    = aureus_toolbar t('.title') do |t|
      - t.left do |l|
        - l.link_to t('.root'), root_url
      - t.right do |r|
        - r.info 'info'
    = yield :navigation
    = aureus_messages flash
    = aureus_content yield
